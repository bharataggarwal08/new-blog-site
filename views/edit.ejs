<%- include('partials/header') %>

<div class="ui container main text segment">
    <div class="ui header huge">Edit <%= blog.title %></div>
    <form method="POST" action="/blogs/<%= blog._id %>?_method=PUT" class = 'ui form'>
        <div class="field">
            <label>
                Title
                <input class="form-control" type="text" name="uBlog[title]" value="<%= blog.title %>">
            </label>
        </div>
        
        <div class="field">
            <label>
                Image
                <input class="form-control" type="text" name="uBlog[image]" value="<%= blog.image %>">
            </label>
        </div>
        
        <div class="field">
            <label>
                Body
                <textarea name="uBlog[body]"><%= blog.body %></textarea>
            </label>
        </div>
        <button class="ui black big button">Submit</button>
        
    </form>
</div>

<%- include('partials/footer') %>